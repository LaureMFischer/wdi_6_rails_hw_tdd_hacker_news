<h1>Hacker News</h1>

<table>
<tr>
<th>Title</th><th>Link</th><th>Description</th><th>User ID</th><th>Vote</th><th>Vote Count</th>
</tr>
<% @submissions.each do |submission| %>
<tr>
  <td><%= link_to "#{submission.title}", submission_path(submission.id) %></td>
  <td><%= submission.link %></td>
  <td><%= submission.description %></td>
  <td><%= submission.user_id %></td>
  <td><%= button_to 'Up vote', submission_votes_path(submission.id), method: :post %></td>
  <td><%= submission.votes.where(direction: true).count %>
</tr>
<% end %>

<%= link_to 'New Submission', new_submission_path %>
